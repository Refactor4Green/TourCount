<?xml version="1.0" encoding="utf-8"?>

<!-- widget_list_species.xml
 used by ListSpeciesWidget.java and ListSpeciesActivity.java.
 Shows a species of purged list of species counts -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/corner"
              android:baselineAligned="false"
              android:orientation="horizontal"
              android:padding="3dp"
              tools:context=".ListSpeciesActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="6dp"
        android:paddingStart="3dp"
        android:paddingTop="3dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:background="@android:color/white"
            android:paddingTop="2dp"
            tools:ignore="PxUsage"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal">

            <!-- Name of species -->
            <TextView
                android:id="@+id/txtSpecName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6.6"
                android:gravity="start"
                android:padding="4sp"
                android:textColor="#bfffff"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"/>

            <ImageView
                android:id="@+id/picSpecies"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.0"
                android:gravity="center_vertical|center_horizontal"
                android:paddingEnd="1dp"
                android:paddingStart="1dp"
                android:scaleType="fitCenter"
                android:src="@drawable/p00000"
                tools:ignore="ContentDescription"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"/>

            <!-- count -->
            <TextView
                android:id="@+id/specCount"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_gravity="center|top"
                android:layout_marginBottom="0dp"
                android:layout_weight="1.4"
                android:background="@drawable/count_background"
                android:gravity="center|center_vertical|center_horizontal"
                android:hint="@string/charZero"
                android:textStyle="bold"
                android:maxLines="1"
                android:padding="0dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
